<%- include('partials/head') %>
<%- include('partials/nav') %>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="/css/view-my-product.css">
</head>
<body>
   <nav class="breadcrumbs">
      <a href="/" class="breadcrumbs__item">Home</a>
      <a href="#checkout" class="breadcrumbs__item is-active">View My Product</a> 
    </nav>
    

    <div class="table-users">
        <div class="header">Product</div>
        
        <table cellspacing="0">
           <tr>
              <th>Picture</th>
              <th>Name</th>
              <th>Price</th>
              <th width="230">Description</th>
              <th></th>
             
           </tr>

           <% products.forEach(function(product) { %>
            <tr>
              <td>
               <img src="/images/product/<%= product.image %>" alt="<%= product.name %>">
               </td> 
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td><%= product.description %></td>
              <td> 
               <a href="/product/<%= product.id %>/delete">Delete</a> 
               </td>
            </tr>
          <% }); %>
        </table>

        <a href="./add-new-product">
         <button class="btn-add">Add New Product</button>
        </a>
        
     </div>
</body>

<%- include('partials/footer') %>